{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": ["src", "../local-npm-test/src/__raff__"],
  "exclude": [
    "src/utils/__test__/**/*.ts",
    "../local-npm-test/src/__raff__/**/*.ts",
    "node_modules"
  ]
}
